db.createCollection("students", {
    validator: {
       $jsonSchema: {
          bsonType: "object",
          required: [ "firstName", "lastName", "ci", "phone", "email", "season" ],
          properties: {
             _id: {
                bsonType: "int",
                description: "ID del estudiante"
             },
             firstName: {
                bsonType: "string",
                description: "Nombre del estudiante"
             },
             lastName: {
                bsonType: "string",
                description: "Apellido del estudiante"
             },
             ci: {
                bsonType: "string",
                description: "Cédula del estudiante"
             },
             phone: {
                bsonType: "string",
                description: "Teléfono del estudiante"
             },
             email: {
                bsonType: "string",
                description: "Correo electrónico del estudiante"
             },
             student:{
               bsonType: "string",
               description: "Tipo de estudiante, bachiller o universitario"
             },
             season: {
                bsonType: "int",
                minimum: 1,
                maximum: 10,
                description: "Semestre actual del estudiante"
             }
          }
       }
    },
    autoIndexId: { _id: "int" }
 });


